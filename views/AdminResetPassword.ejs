<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "Update Password" %></title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #000;
      color: #fff;
      font-family: Arial, sans-serif;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0;
    }

    .form-container {
      background: #111;
      padding: 30px;
      border-radius: 10px;
      width: 100%;
      max-width: 420px;
      box-shadow: 0 0 15px rgba(0,0,0,0.6);
    }

    h2 {
      text-align: center;
      margin-bottom: 20px;
      color: #fff;
    }

    label {
      color: #fff;
      margin-top: 10px;
      font-weight: 500;
    }

    .input-group-text {
      background: #222;
      border: 1px solid #444;
      cursor: pointer;
    }

    .form-control {
      background: #222;
      color: #fff;
      border: 1px solid #444;
    }

    .form-control:focus {
      outline: none;
      border-color: #1db954;
      box-shadow: 0 0 5px #1db954;
    }

    .btn-custom {
      width: 100%;
      margin-top: 20px;
      background: #1db954;
      border: none;
      color: #fff;
      font-weight: bold;
    }

    .btn-custom:hover {
      background: #17a84a;
    }

    .msg {
      text-align: center;
      margin-bottom: 15px;
      color: #ff5555;
    }

    .eye-icon {
      width: 20px;
      height: 20px;
      fill: #ccc;
    }
  </style>
</head>
<body>

  <div class="form-container">
    <h2>Update Password</h2>

    <% if (msg) { %>
      <div class="msg"><%= msg %></div>
    <% } %>

    <p class="text-center mb-3">
      Your email: <strong><%= email %></strong>
    </p>

    <form action="/admin/reset-password" method="POST">
      <input type="hidden" name="token" value="<%= token %>">

      <!-- New Password -->
      <div class="mb-3">
        <label for="password">New Password</label>
        <div class="input-group">
          <input type="password" id="password" name="password" class="form-control" required>
          <span class="input-group-text" onclick="togglePassword('password', 'eye1')">
            <svg id="eye1" class="eye-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path d="M12 5C7 5 2.73 8.11 1 12c1.73 3.89 6 7 11 7s9.27-3.11 11-7c-1.73-3.89-6-7-11-7zm0 
                       12a5 5 0 1 1 0-10 5 5 0 0 1 0 10z"/>
              <circle cx="12" cy="12" r="2.5"/>
            </svg>
          </span>
        </div>
      </div>

      <!-- Confirm Password -->
      <div class="mb-3">
        <label for="confirmPassword">Confirm Password</label>
        <div class="input-group">
          <input type="password" id="confirmPassword" name="confirm" class="form-control" required>
          <span class="input-group-text" onclick="togglePassword('confirmPassword', 'eye2')">
            <svg id="eye2" class="eye-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path d="M12 5C7 5 2.73 8.11 1 12c1.73 3.89 6 7 11 7s9.27-3.11 11-7c-1.73-3.89-6-7-11-7zm0 
                       12a5 5 0 1 1 0-10 5 5 0 0 1 0 10z"/>
              <circle cx="12" cy="12" r="2.5"/>
            </svg>
          </span>
        </div>
      </div>

      <!-- Submit -->
      <button type="submit" class="btn btn-custom">Update Password</button>
    </form>
  </div>

  <script>
    function togglePassword(inputId, eyeId) {
      const input = document.getElementById(inputId);
      const eye = document.getElementById(eyeId);
      if (input.type === "password") {
        input.type = "text";
        eye.style.fill = "#fff"; // brighter when active
      } else {
        input.type = "password";
        eye.style.fill = "#ccc"; // gray when hidden
      }
    }
  </script>
</body>
</html>
