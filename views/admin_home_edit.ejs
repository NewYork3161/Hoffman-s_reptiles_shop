<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title || 'Edit Home Page' %></title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <style>
    body { background:#f8f9fa; }
    .wrap { max-width:1100px; margin:32px auto; }
    .card { border-radius:12px; box-shadow:0 6px 18px rgba(0,0,0,.06); }
    .thumb { width:180px; height:120px; object-fit:cover; border-radius:8px; border:1px solid rgba(0,0,0,.08); }
    .grid-thumb { width:150px; height:110px; object-fit:cover; border-radius:8px; border:1px solid rgba(0,0,0,.08); }
    .muted { color:#6c757d; font-size:.92rem; }
    .section-heading { display:flex; align-items:center; justify-content:space-between; gap:16px; }
    .sticky-actions { position: sticky; top: 0; padding: 12px 0; z-index: 5; background: linear-gradient(#f8f9fa, #f8f9fa); }
    .form-help { font-size:.85rem; color:#6c757d; }
    .empty { border:1px dashed #cfd4da; background:#fff; border-radius:10px; padding:18px; }
  </style>
</head>
<body>
  <div class="wrap">
    <div class="d-flex align-items-center justify-content-between mb-3 sticky-actions">
      <h1 class="h3 mb-0">Admin • Edit Home Page</h1>
      <div class="d-flex gap-2">
        <a href="/admin/dashboard" class="btn btn-outline-secondary">← Back to Dashboard</a>
        <form action="/admin/home/publish" method="POST">
          <button type="submit" class="btn btn-success">Publish Page</button>
        </form>
        <a href="/home" target="_blank" class="btn btn-outline-primary">Preview Public Page</a>
      </div>
    </div>

    <% if (typeof msg !== 'undefined' && msg) { %>
      <div class="alert alert-info"><%= msg %></div>
    <% } %>

    <!-- ========== CAROUSEL ========== -->
    <div class="card mb-4">
      <div class="card-header section-heading">
        <div>
          <strong>Carousel</strong>
          <div class="muted">Preview, replace image, and edit text for each slide.</div>
        </div>
        <button class="btn btn-sm btn-success" data-bs-toggle="collapse" data-bs-target="#addSlide">+ Add Slide</button>
      </div>
      <div class="card-body">
        <% const carouselSlides = (pageData && Array.isArray(pageData.carousel)) ? pageData.carousel : []; %>

        <% if (carouselSlides.length) { %>
          <div class="row g-4">
            <% carouselSlides.forEach((s, i) => { %>
              <div class="col-12 col-md-6">
                <div class="border rounded p-3 h-100">
                  <div class="mb-2"><span class="badge bg-secondary">Slide #<%= i+1 %></span></div>
                  <div class="text-center mb-3"><img class="thumb" src="<%= s.image %>" alt="Slide <%= i+1 %>"></div>

                  <!-- Replace Image -->
                  <form action="/admin/home/carousel/<%= i %>?_method=PUT" method="POST" enctype="multipart/form-data" class="mb-3">
                    <input type="hidden" name="__edit" value="imageOnly">
                    <input class="form-control form-control-sm mb-2" type="file" accept="image/*" name="imageFile">
                    <button class="btn btn-primary btn-sm w-100">Replace Image</button>
                  </form>

                  <!-- Title -->
                  <form action="/admin/home/carousel/<%= i %>?_method=PUT" method="POST" class="mb-2 d-flex gap-2">
                    <input type="hidden" name="__edit" value="textOnly">
                    <input class="form-control" type="text" name="title" value="<%= s.title || '' %>" placeholder="Slide title">
                    <button class="btn btn-outline-primary btn-sm">Save</button>
                  </form>

                  <!-- Description (mapped to schema.description in the route) -->
                  <form action="/admin/home/carousel/<%= i %>?_method=PUT" method="POST" class="mb-3 d-flex gap-2">
                    <input type="hidden" name="__edit" value="textOnly">
                    <textarea class="form-control" name="subtitle" rows="3" style="resize: vertical;" placeholder="Slide description…"><%= s.description || '' %></textarea>
                    <button class="btn btn-outline-primary btn-sm">Save</button>
                  </form>

                  <!-- Delete -->
                  <form action="/admin/home/carousel/<%= i %>?_method=DELETE" method="POST" onsubmit="return confirm('Remove slide <%= i+1 %>?');">
                    <button class="btn btn-sm btn-danger w-100">Delete Slide</button>
                  </form>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <p class="text-muted mb-0">No slides yet. Add one below.</p>
        <% } %>

        <!-- Add slide -->
        <div id="addSlide" class="collapse mt-4">
          <form class="row g-3" action="/admin/home/carousel?_method=POST" method="POST" enctype="multipart/form-data">
            <div class="col-md-4">
              <label class="form-label">New Slide Image</label>
              <input class="form-control" type="file" accept="image/*" name="imageFile" required>
            </div>
            <div class="col-md-4">
              <label class="form-label">Title</label>
              <input class="form-control" type="text" name="title" placeholder="Welcome to Hoffman's Reptiles">
            </div>
            <div class="col-md-4">
              <label class="form-label">Description</label>
              <textarea class="form-control" name="subtitle" rows="3" style="resize: vertical;" placeholder="Slide description…"></textarea>
            </div>
            <div class="col-12"><button class="btn btn-success">Add Slide</button></div>
          </form>
        </div>
      </div>
    </div>

    <!-- ========== INFO SECTION ========== -->
    <div class="card mb-4">
      <div class="card-header section-heading">
        <strong>Info Section</strong>
        <span class="muted">Headline + paragraph under the carousel</span>
      </div>
      <div class="card-body">
        <form class="row g-3" action="/admin/home/info?_method=PUT" method="POST">
          <div class="col-12">
            <label class="form-label">Headline</label>
            <input class="form-control" type="text" name="headline"
                   value="<%= pageData?.info?.headline || '' %>"
                   placeholder="LOOKING FOR AN EXOTIC PET?">
          </div>
          <div class="col-12">
            <label class="form-label">Text</label>
            <textarea class="form-control" name="text" rows="4"
                      placeholder="Welcome to Hoffman's Reptiles…"><%= pageData?.info?.text || '' %></textarea>
          </div>
          <div class="col-12"><button class="btn btn-success">Save Info</button></div>
        </form>
      </div>
    </div>

    <!-- ========== SPLIT SECTION ========== -->
    <div class="card mb-4">
      <div class="card-header section-heading">
        <strong>Split Section</strong>
        <span class="muted">Large image at left, title + paragraph at right</span>
      </div>
      <div class="card-body">
        <div class="row g-4 align-items-start">
          <div class="col-md-5">
            <div class="mb-2">
              <% if (pageData?.split?.image) { %>
                <img class="thumb w-100" style="height:220px" src="<%= pageData.split.image %>" alt="split current"/>
              <% } %>
            </div>
            <form action="/admin/home/split/image?_method=PUT" method="POST" enctype="multipart/form-data">
              <input class="form-control mb-2" type="file" accept="image/*" name="imageFile"/>
              <button class="btn btn-primary">Replace Image</button>
            </form>
          </div>
          <div class="col-md-7">
            <form action="/admin/home/split/text?_method=PUT" method="POST">
              <div class="mb-3">
                <label class="form-label">Title</label>
                <input class="form-control" type="text" name="title"
                       value="<%= pageData?.split?.title || '' %>">
              </div>
              <div class="mb-3">
                <label class="form-label">Text</label>
                <textarea class="form-control" name="text" rows="4"><%= pageData?.split?.text || '' %></textarea>
              </div>
              <button class="btn btn-success">Save Split Text</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- ========== MID SECTION (NEW) ========== -->
    <div class="card mb-4">
      <div class="card-header section-heading">
        <strong>Mid Section</strong>
        <span class="muted">Optional text between Split and Grid</span>
      </div>
      <div class="card-body">
        <!-- Update Mid -->
        <form action="/admin/home/mid?_method=PUT" method="POST" class="mb-3">
          <div class="mb-3">
            <label class="form-label">Text</label>
            <textarea class="form-control" name="text" rows="4"
                      placeholder="Optional mid-section content…"><%= pageData?.mid?.text || '' %></textarea>
          </div>
          <button class="btn btn-success">Save Mid Section</button>
        </form>

        <!-- Delete Mid (only shows if there is text) -->
        <% if (pageData?.mid?.text) { %>
          <form action="/admin/home/mid?_method=PUT" method="POST" onsubmit="return confirm('Clear the mid section text?');">
            <input type="hidden" name="text" value="">
            <button class="btn btn-danger">Delete Mid Section</button>
          </form>
        <% } %>
      </div>
    </div>

    <!-- ========== GRID SECTION ========== -->
    <div class="card mb-4">
      <div class="card-header section-heading">
        <strong>Image Grid (<%= pageData?.grid?.images?.length || 0 %>+)</strong>
        <span class="muted">Replace any thumbnail, add new ones, or delete.</span>
      </div>
      <div class="card-body">
        <!-- Add new grid image -->
        <form class="d-flex gap-2 mb-4" action="/admin/home/grid?_method=POST" method="POST" enctype="multipart/form-data">
          <div class="flex-grow-1">
            <label class="form-label mb-1">Add Grid Image</label>
            <input class="form-control" type="file" accept="image/*" name="imageFile">
          </div>
          <div class="align-self-end">
            <button class="btn btn-success">+ Add Image</button>
          </div>
        </form>

        <% const grid = (pageData?.grid?.images) || []; %>

        <% if (!grid.length) { %>
          <div class="empty">
            <div class="muted mb-0">No grid images yet — use “Add Grid Image” above to start.</div>
          </div>
        <% } else { %>
          <div class="row g-4">
            <% grid.forEach((src, i) => { %>
              <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="border rounded p-2 h-100">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <span class="muted">#<%= i+1 %></span>
                  </div>
                  <div class="text-center mb-2">
                    <img class="grid-thumb" src="<%= src %>" alt="grid <%= i+1 %>">
                  </div>

                  <!-- Replace -->
                  <form action="/admin/home/grid/<%= i %>?_method=PUT" method="POST" enctype="multipart/form-data" class="mb-2">
                    <input class="form-control mb-2" type="file" accept="image/*" name="imageFile">
                    <button class="btn btn-primary w-100 btn-sm">Replace</button>
                  </form>

                  <!-- Delete -->
                  <form action="/admin/home/grid/<%= i %>?_method=DELETE" method="POST" onsubmit="return confirm('Delete grid image #<%= i+1 %>?');">
                    <button class="btn btn-danger w-100 btn-sm">Delete</button>
                  </form>

                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>

    <!-- ========== FOOTER ========== -->
    <div class="card mb-5">
      <div class="card-header section-heading">
        <strong>Footer</strong>
      </div>
      <div class="card-body">
        <form class="row g-3" action="/admin/home/footer?_method=PUT" method="POST">
          <div class="col-12">
            <label class="form-label">Footer Title</label>
            <input class="form-control" type="text" name="title"
                   value="<%= pageData?.footer?.title || '' %>">
          </div>
          <div class="col-12">
            <label class="form-label">Footer Text</label>
            <textarea class="form-control" name="text" rows="5"
                      placeholder="Type your footer info"><%= pageData?.footer?.text || '' %></textarea>
          </div>
          <div class="col-12">
            <button class="btn btn-success">Save Footer</button>
          </div>
        </form>
      </div>
    </div>

    <div class="text-center mb-5">
      <a href="/home" class="btn btn-outline-primary" target="_blank">Preview Public Page</a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
