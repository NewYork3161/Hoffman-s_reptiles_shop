<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title || 'Edit Home Page' %></title>

  <!-- Favicon (capital I) -->
  <link rel="icon" type="image/png" href="/Images/logo.png" />
  <link rel="shortcut icon" type="image/png" href="/Images/logo.png" />

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>

  <!-- Unified Dark Dashboard Styles -->
  <style>
    :root { --green:#28a745; --card:#181818; --border:#2a2a2a; --muted:#b8b8b8; }
    html, body { height:100%; margin:0; }
    body { background:#000; color:#fff; font-family: Arial, Helvetica, sans-serif; }
    .wrap { max-width:1100px; margin:32px auto; padding:0 16px; }

    .card { background:var(--card); border:1px solid var(--border); border-radius:12px; box-shadow:0 6px 18px rgba(0,0,0,.25); color:#fff; }
    .card-header { display:flex; align-items:center; justify-content:space-between; gap:16px; padding:12px 16px; border-bottom:1px solid var(--border); background:rgba(0,0,0,.35); }
    .muted { color:var(--muted); font-size:.92rem; }
    .section-heading strong { color:var(--green); }

    /* Sticky header actions like other pages */
    .sticky-actions { position: sticky; top: 0; padding: 12px 0; z-index: 5; background:#000; }
    .sticky-actions .actions { margin-left:auto; } /* push buttons to right */

    .empty { border:1px dashed #444; background:#0c0c0c; border-radius:10px; padding:18px; color:#bbb; }
    .form-label { color:#ddd; }
    .form-control, .form-select { background:#0d0d0d; border:1px solid #3a3a3a; color:#fff; }
    .form-control:focus, .form-select:focus { border-color: var(--green); box-shadow: 0 0 0 0.25rem rgba(40,167,69,.25); }
    .btn-success { background-color: var(--green); border-color: var(--green); }
    .btn-outline-primary { color: var(--green); border-color: var(--green); }
    .btn-outline-primary:hover { background: var(--green); color:#000; }
    .btn-outline-secondary { color:#ccc; border-color:#555; }
    .btn-outline-secondary:hover { background:#333; color:#fff; }

    /* Thumbs used in this page */
    .thumb { width:180px; height:120px; object-fit:cover; border-radius:8px; border:1px solid #333; }
    .grid-thumb { width:150px; height:110px; object-fit:cover; border-radius:8px; border:1px solid #333; }

    /* Slight spacing/centering tweak requested for Grid Header */
    #section-grid { margin-top: 24px; }
    #section-grid .card-header { text-align:center; padding: 2rem 1rem 1.25rem; }
    #section-grid .card-body { padding-top: .75rem; }
    #section-grid strong { display:block; font-size:1.35rem; color:var(--green); margin-bottom:.35rem; }
    #section-grid .muted { display:block; margin:0 auto .25rem; }

    .js-img-preview { margin-top:8px; display:none; align-items:center; gap:10px; }
    .js-img-preview img { width:180px; height:120px; object-fit:cover; border-radius:8px; border:1px solid #333; }
  </style>
</head>
<body>
  <div class="wrap">
    <!-- Sticky actions (Back + Preview only) -->
    <div class="d-flex align-items-center sticky-actions">
      <h1 class="h3 mb-0">Admin • Edit Home Page</h1>
      <div class="actions d-flex gap-2">
        <a href="/admin/dashboard" class="btn btn-outline-secondary">← Back</a>
        <a href="/home" target="_blank" class="btn btn-outline-primary">Preview</a>
      </div>
    </div>

    <% if (typeof msg !== 'undefined' && msg) { %>
      <div class="alert alert-info"><%= msg %></div>
    <% } %>

    <!-- ========== CAROUSEL ========== -->
    <div class="card mb-4" id="section-carousel">
      <div class="card-header section-heading">
        <div>
          <strong>Carousel</strong>
          <div class="muted">Preview, replace image, and edit text for each slide.</div>
        </div>
        <button class="btn btn-sm btn-success" data-bs-toggle="collapse" data-bs-target="#addSlide">+ Add Slide</button>
      </div>
      <div class="card-body">
        <% const carouselSlides = (pageData && Array.isArray(pageData.carousel)) ? pageData.carousel : []; %>

        <% if (carouselSlides.length) { %>
          <div class="row g-4">
            <% carouselSlides.forEach((s, i) => { %>
              <div class="col-12 col-md-6">
                <div class="border rounded p-3 h-100" style="background:#111;">
                  <div class="mb-2"><span class="badge bg-secondary">Slide #<%= i+1 %></span></div>
                  <div class="text-center mb-3"><img class="thumb" src="<%= s.image %>" alt="Slide <%= i+1 %>"></div>

                  <!-- Replace Image -->
                  <form action="/admin/home/carousel/<%= i %>?_method=PUT" method="POST" enctype="multipart/form-data" class="mb-3 image-field">
                    <input type="hidden" name="__edit" value="imageOnly">
                    <input class="form-control form-control-sm mb-2 image-input" type="file" accept="image/*" name="imageFile">
                    <button type="button" class="btn btn-outline-secondary w-100 mb-2 btn-cancel">Cancel</button>
                    <div class="js-img-preview"><img alt="Selected preview"></div>
                    <button class="btn btn-outline-primary btn-sm w-100">Replace Image</button>
                  </form>

                  <!-- Title -->
                  <form action="/admin/home/carousel/<%= i %>?_method=PUT" method="POST" class="mb-2 d-flex gap-2">
                    <input type="hidden" name="__edit" value="textOnly">
                    <input class="form-control" type="text" name="title" value="<%= s.title || '' %>" placeholder="Slide title">
                    <button class="btn btn-outline-primary btn-sm">Save</button>
                  </form>

                  <!-- Description -->
                  <form action="/admin/home/carousel/<%= i %>?_method=PUT" method="POST" class="mb-3 d-flex gap-2">
                    <input type="hidden" name="__edit" value="textOnly">
                    <textarea class="form-control" name="subtitle" rows="3" style="resize: vertical;" placeholder="Slide description…"><%= s.description || '' %></textarea>
                    <button class="btn btn-outline-primary btn-sm">Save</button>
                  </form>

                  <!-- Delete -->
                  <form action="/admin/home/carousel/<%= i %>?_method=DELETE" method="POST" onsubmit="return confirm('Remove slide <%= i+1 %>?');">
                    <button class="btn btn-danger btn-sm w-100">Delete Slide</button>
                  </form>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <p class="text-muted mb-0">No slides yet. Add one below.</p>
        <% } %>

        <!-- Add slide -->
        <div id="addSlide" class="collapse mt-4">
          <form class="row g-3 image-field" action="/admin/home/carousel?_method=POST" method="POST" enctype="multipart/form-data">
            <div class="col-md-4">
              <label class="form-label">New Slide Image</label>
              <input class="form-control image-input" type="file" accept="image/*" name="imageFile" required>
              <button type="button" class="btn btn-outline-secondary w-100 mb-2 btn-cancel">Cancel</button>
              <div class="js-img-preview"><img alt="Selected preview"></div>
            </div>
            <div class="col-md-4">
              <label class="form-label">Title</label>
              <input class="form-control" type="text" name="title" placeholder="Welcome to Hoffman's Reptiles">
            </div>
            <div class="col-md-4">
              <label class="form-label">Description</label>
              <textarea class="form-control" name="subtitle" rows="3" style="resize: vertical;" placeholder="Slide description…"></textarea>
            </div>
            <div class="col-12"><button class="btn btn-success">Add Slide</button></div>
          </form>
        </div>
      </div>
    </div>

    <!-- ========== INFO SECTION ========== -->
    <div class="card mb-4" id="section-info">
      <div class="card-header section-heading">
        <strong>Info Section</strong>
        <span class="muted">Headline + paragraph under the carousel</span>
      </div>
      <div class="card-body">
        <form class="row g-3" action="/admin/home/info?_method=PUT" method="POST">
          <div class="col-12">
            <label class="form-label">Headline</label>
            <input class="form-control" type="text" name="headline"
                   value="<%= pageData?.info?.headline || '' %>"
                   placeholder="LOOKING FOR AN EXOTIC PET?">
          </div>
          <div class="col-12">
            <label class="form-label">Text</label>
            <textarea class="form-control" name="text" rows="4"
                      placeholder="Welcome to Hoffman's Reptiles…"><%= pageData?.info?.text || '' %></textarea>
          </div>
          <div class="col-12"><button class="btn btn-success">Save Info</button></div>
        </form>
      </div>
    </div>

    <!-- ========== SPLIT SECTION ========== -->
    <div class="card mb-4" id="section-split">
      <div class="card-header section-heading">
        <strong>Split Section</strong>
        <span class="muted">Large image at left, title + paragraph at right</span>
      </div>
      <div class="card-body">
        <div class="row g-4 align-items-start">
          <div class="col-md-5">
            <div class="mb-2">
              <% if (pageData?.split?.image) { %>
                <img class="thumb w-100" style="height:220px" src="<%= pageData.split.image %>" alt="split current"/>
              <% } %>
            </div>
            <form action="/admin/home/split/image?_method=PUT" method="POST" enctype="multipart/form-data" class="image-field">
              <input class="form-control mb-2 image-input" type="file" accept="image/*" name="imageFile"/>
              <button type="button" class="btn btn-outline-secondary w-100 mb-2 btn-cancel">Cancel</button>
              <div class="js-img-preview"><img alt="Selected preview"></div>
              <button class="btn btn-outline-primary">Replace Image</button>
            </form>
          </div>
          <div class="col-md-7">
            <form action="/admin/home/split/text?_method=PUT" method="POST">
              <div class="mb-3">
                <label class="form-label">Title</label>
                <input class="form-control" type="text" name="title"
                       value="<%= pageData?.split?.title || '' %>">
              </div>
              <div class="mb-3">
                <label class="form-label">Text</label>
                <textarea class="form-control" name="text" rows="4"><%= pageData?.split?.text || '' %></textarea>
              </div>
              <button class="btn btn-success">Save Split Text</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- ========== MID SECTION ========== -->
    <div class="card mb-4" id="section-mid">
      <div class="card-header section-heading">
        <strong>Mid Section</strong>
        <span class="muted">Optional text between Split and Grid</span>
      </div>
      <div class="card-body">
        <form action="/admin/home/mid?_method=PUT" method="POST" class="mb-3">
          <div class="mb-3">
            <label class="form-label">Text</label>
            <textarea class="form-control" name="text" rows="4"
                      placeholder="Optional mid-section content…"><%= pageData?.mid?.text || '' %></textarea>
          </div>
          <button class="btn btn-success">Save Mid Section</button>
        </form>

        <% if (pageData?.mid?.text) { %>
          <form action="/admin/home/mid?_method=PUT" method="POST" onsubmit="return confirm('Clear the mid section text?');">
            <input type="hidden" name="text" value="">
            <button class="btn btn-danger">Delete Mid Section</button>
          </form>
        <% } %>
      </div>
    </div>

    <!-- ========== GRID HEADER ========== -->
    <div class="card mb-4" id="section-grid">
      <div class="card-header section-heading">
        <strong>Grid Header</strong>
        <span class="muted">Controls the title and subtitle above the grid on the public homepage.</span>
      </div>
      <div class="card-body">
        <form class="row g-3" action="/admin/home/grid-header?_method=PUT" method="POST">
          <div class="col-12">
            <label class="form-label">Grid Title</label>
            <input class="form-control" type="text" name="title"
                   value="<%= pageData?.grid?.title || '' %>"
                   placeholder="A sample of our animals">
            <div class="muted">Example: “A sample of our animals”</div>
          </div>
          <div class="col-12">
            <label class="form-label">Grid Subtitle</label>
            <textarea class="form-control" name="subtitle" rows="3"
                      placeholder="Changes weekly. Please visit our store to see what is in stock."><%= pageData?.grid?.subtitle || '' %></textarea>
            <div class="muted">Example: “Changes weekly. Please visit our store to see what is in stock.”</div>
          </div>
          <div class="col-12">
            <button class="btn btn-success">Save Grid Header</button>
          </div>
        </form>
      </div>
    </div>

    <!-- ========== GRID IMAGES ========== -->
    <div class="card mb-4" id="section-grid-images">
      <div class="card-header section-heading">
        <strong>Image Grid (<%= pageData?.grid?.images?.length || 0 %>+)</strong>
        <span class="muted">Replace any thumbnail, add new ones, or delete.</span>
      </div>
      <div class="card-body">
        <form class="d-flex gap-2 mb-4 image-field" action="/admin/home/grid?_method=POST" method="POST" enctype="multipart/form-data">
          <div class="flex-grow-1">
            <label class="form-label mb-1">Add Grid Image</label>
            <input class="form-control image-input" type="file" accept="image/*" name="imageFile">
            <button type="button" class="btn btn-outline-secondary w-100 mb-2 btn-cancel">Cancel</button>
            <div class="js-img-preview"><img alt="Selected preview"></div>
          </div>
          <div class="align-self-end">
            <button class="btn btn-success">+ Add Image</button>
          </div>
        </form>

        <% const grid = (pageData?.grid?.images) || []; %>

        <% if (!grid.length) { %>
          <div class="empty">
            <div class="muted mb-0">No grid images yet — use “Add Grid Image” above to start.</div>
          </div>
        <% } else { %>
          <div class="row g-4">
            <% grid.forEach((src, i) => { %>
              <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="border rounded p-2 h-100" style="background:#111;">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <span class="muted">#<%= i+1 %></span>
                  </div>
                  <div class="text-center mb-2">
                    <img class="grid-thumb" src="<%= src %>" alt="grid <%= i+1 %>">
                  </div>

                  <form action="/admin/home/grid/<%= i %>?_method=PUT" method="POST" enctype="multipart/form-data" class="mb-2 image-field">
                    <input class="form-control mb-2 image-input" type="file" accept="image/*" name="imageFile">
                    <button type="button" class="btn btn-outline-secondary w-100 mb-2 btn-cancel">Cancel</button>
                    <div class="js-img-preview"><img alt="Selected preview"></div>
                    <button class="btn btn-outline-primary w-100 btn-sm">Replace</button>
                  </form>

                  <form action="/admin/home/grid/<%= i %>?_method=DELETE" method="POST" onsubmit="return confirm('Delete grid image #<%= i+1 %>?');">
                    <button class="btn btn-danger w-100 btn-sm">Delete</button>
                  </form>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>

    <!-- ========== FOOTER ========== -->
    <div class="card mb-5" id="section-footer">
      <div class="card-header section-heading">
        <strong>Footer</strong>
      </div>
      <div class="card-body">
        <form class="row g-3" action="/admin/home/footer?_method=PUT" method="POST">
          <div class="col-12">
            <label class="form-label">Footer Title</label>
            <input class="form-control" type="text" name="title"
                   value="<%= pageData?.footer?.title || '' %>">
          </div>
          <div class="col-12">
            <label class="form-label">Footer Text</label>
            <textarea class="form-control" name="text" rows="5"
                      placeholder="Type your footer info"><%= pageData?.footer?.text || '' %></textarea>
          </div>
          <div class="col-12">
            <button class="btn btn-success">Save Footer</button>
          </div>
        </form>
      </div>
    </div>

    <div class="text-center mb-5">
      <a href="/home" class="btn btn-outline-primary" target="_blank">Preview</a>
    </div>
  </div>

  <!-- JS: live preview + cancel -->
  <script>
    (function () {
      function wireField(input) {
        const form = input.closest("form");
        if (!form) return;
        const previewBox = form.querySelector(".js-img-preview");
        const img = previewBox ? previewBox.querySelector("img") : null;
        const cancel = form.querySelector(".btn-cancel");

        if (input && img && cancel) {
          input.addEventListener("change", () => {
            const file = input.files && input.files[0];
            if (file) {
              const url = URL.createObjectURL(file);
              img.src = url;
              previewBox.style.display = "inline-flex";
              img.onload = () => URL.revokeObjectURL(url);
            }
          });

          cancel.addEventListener("click", () => {
            input.value = "";
            img.src = "";
            previewBox.style.display = "none";
          });
        }
      }

      document.querySelectorAll(".image-input").forEach(wireField);
    })();
  </script>

  <!-- Keep scroll position after Save/Delete -->
  <script>
  (function () {
    if ('scrollRestoration' in history) history.scrollRestoration = 'manual';
    const KEY = 'adminHome.scrollY';

    document.addEventListener('submit', function (e) {
      if (e.target && e.target.tagName === 'FORM') {
        sessionStorage.setItem(KEY, String(window.scrollY));
      }
    }, true);

    document.addEventListener('click', function (e) {
      const btn = e.target.closest('button, input[type="submit"]');
      if (!btn) return;
      const form = btn.form || btn.closest('form');
      if (form) sessionStorage.setItem(KEY, String(window.scrollY));
    }, true);

    const saved = sessionStorage.getItem(KEY);
    if (saved !== null) {
      window.scrollTo(0, parseInt(saved, 10) || 0);
      sessionStorage.removeItem(KEY);
    }

    if (location.hash) {
      const el = document.getElementById(location.hash.slice(1));
      if (el) el.scrollIntoView({ behavior: 'instant', block: 'start' });
    }
  })();
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
