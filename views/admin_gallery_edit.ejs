<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title || 'Edit Gallery - Admin' %></title>

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/Images/logo.png" />
  <link rel="shortcut icon" type="image/png" href="/Images/logo.png" />

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>

  <!-- Unified Dark Dashboard Theme -->
  <style>
    :root { --green:#28a745; --card:#181818; --border:#2a2a2a; --muted:#b8b8b8; }
    html, body { height:100%; margin:0; }
    body { background:#000; color:#fff; font-family: Arial, Helvetica, sans-serif; display:flex; flex-direction:column; min-height:100vh; }
    .wrap { max-width:1100px; margin:32px auto; padding:0 16px; flex:1; }

    .card { background:var(--card); border:1px solid var(--border); border-radius:12px; box-shadow:0 6px 18px rgba(0,0,0,.25); color:#fff; }
    .card-header { background:rgba(0,0,0,.35); border-bottom:1px solid var(--border); display:flex; align-items:center; justify-content:space-between; gap:12px; }
    .section-heading strong { color:var(--green); }
    .muted { color:var(--muted); font-size:.92rem; }

    /* Sticky header that sits directly above the Info Section */
    .sticky-actions { position: sticky; top: 0; padding: 12px 0; z-index: 5; background:#000; }
    /* Always push the button group to the right */
    .sticky-actions .actions { margin-left:auto; }

    .grid-thumb { width:100%; height:220px; object-fit:cover; border-radius:6px; border:1px solid #333; }
    .empty { border:1px dashed #444; background:#0c0c0c; border-radius:10px; padding:18px; color:#bbb; }

    .form-label { color:#ddd; }
    .form-control, .form-select { background:#0d0d0d; border:1px solid #3a3a3a; color:#fff; }
    .form-control:focus, .form-select:focus { border-color: var(--green); box-shadow: 0 0 0 0.25rem rgba(40,167,69,.25); }

    .btn-success { background-color: var(--green); border-color: var(--green); }
    .btn-outline-primary { color: var(--green); border-color: var(--green); }
    .btn-outline-primary:hover { background: var(--green); color:#000; }
    .btn-outline-secondary { color:#ccc; border-color:#555; }
    .btn-outline-secondary:hover { background:#333; color:#fff; }

    .js-img-preview { margin-top:8px; display:inline-flex; align-items:center; gap:10px; }
    .js-img-preview img { width:200px; height:150px; object-fit:cover; border:1px solid #333; border-radius:6px; }

    footer.admin-footer { background:#111; color:#bbb; text-align:center; padding:16px 0; margin-top:auto; }
  </style>
</head>
<body>
  <%
    const _p = (typeof pageData !== 'undefined' && pageData) ? pageData : {};
    const _info = _p.info || {};
    const _images = Array.isArray(_p.images) ? _p.images : [];
    const _footer = _p.footer || {};
    const _msg = (typeof msg !== 'undefined' && msg) ? msg : '';
  %>

  <div class="wrap">
    <!-- Sticky header actions (now inside .wrap so it sits over the Info Section) -->
    <div class="d-flex align-items-center sticky-actions">
      <h1 class="h3 mb-0">Admin • Edit Gallery Page</h1>
      <div class="actions d-flex gap-2">
        <a href="/admin/dashboard" class="btn btn-outline-secondary">← Back</a>
        <a href="/gallery" target="_blank" class="btn btn-outline-primary">Preview</a>
      </div>
    </div>

    <% if (_msg) { %><div class="alert alert-info"><%= _msg %></div><% } %>

    <!-- INFO -->
    <div class="card mb-4" id="section-info">
      <div class="card-header section-heading"><strong>Info Section</strong></div>
      <div class="card-body">
        <form action="/admin/gallery/info?_method=PUT" method="POST" class="row g-3">
          <div class="col-12">
            <label class="form-label">Title</label>
            <input class="form-control" type="text" name="title" value="<%= _info.title || '' %>">
          </div>
          <div class="col-12">
            <label class="form-label">Text</label>
            <textarea class="form-control" name="text" rows="4"><%= _info.text || '' %></textarea>
          </div>
          <div class="col-12"><button class="btn btn-success" type="submit">Save Info</button></div>
        </form>
      </div>
    </div>

    <!-- IMAGE GRID -->
    <div class="card mb-4" id="section-grid">
      <div class="card-header section-heading">
        <strong>Gallery Grid</strong>
        <span class="muted">Upload and manage gallery images</span>
      </div>
      <div class="card-body">
        <form action="/admin/gallery/images?_method=POST" method="POST" enctype="multipart/form-data" class="mb-4">
          <label class="form-label">Add Image</label>
          <input class="form-control" type="file" name="imageFile" accept="image/*">
          <button class="btn btn-success mt-2" type="submit">+ Add Image</button>
        </form>

        <% if (!_images.length) { %>
          <div class="empty">No gallery images yet — add one above.</div>
        <% } else { %>
          <div class="row g-4">
            <% _images.forEach(function(src, idx){ %>
              <div class="col-md-3">
                <img class="grid-thumb mb-2" src="<%= src %>?v=<%= Date.now() %>" alt="Gallery image <%= idx+1 %>">
                <form action="/admin/gallery/images/<%= idx %>?_method=PUT" method="POST" enctype="multipart/form-data" class="mb-2">
                  <input class="form-control mb-2" type="file" name="imageFile" accept="image/*">
                  <button class="btn btn-outline-primary btn-sm w-100" type="submit">Replace</button>
                </form>
                <form action="/admin/gallery/images/<%= idx %>?_method=DELETE" method="POST" onsubmit="return confirm('Delete this image?');">
                  <button class="btn btn-danger btn-sm w-100" type="submit">Delete</button>
                </form>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>

    <!-- FOOTER -->
    <div class="card mb-5" id="section-footer">
      <div class="card-header"><strong>Footer</strong></div>
      <div class="card-body">
        <form action="/admin/gallery/footer?_method=PUT" method="POST" class="row g-3">
          <div class="col-12">
            <label class="form-label">Footer Title</label>
            <input class="form-control" type="text" name="title" value="<%= _footer.title || '' %>">
          </div>
          <div class="col-12">
            <label class="form-label">Footer Text</label>
            <textarea class="form-control" name="text" rows="3"><%= _footer.text || '' %></textarea>
          </div>
          <div class="col-12"><button class="btn btn-success" type="submit">Save Footer</button></div>
        </form>
      </div>
    </div>
  </div>

  <!-- Sticky footer -->
  <footer class="admin-footer">
    Hoffman's Reptile Shop Admin • © <%= new Date().getFullYear() %>
  </footer>

  <!-- Live image preview -->
  <script>
    (function () {
      function ensurePreviewBox(afterNode) {
        let box = afterNode.nextElementSibling;
        if (!box || !box.classList || !box.classList.contains('js-img-preview')) {
          box = document.createElement('div');
          box.className = 'js-img-preview';
          const img = document.createElement('img');
          img.alt = 'Selected preview';
          box.appendChild(img);
          afterNode.parentNode.insertBefore(box, afterNode.nextSibling);
        }
        return box;
      }
      function showPreview(input) {
        const file = input.files && input.files[0];
        if (!file) return;
        const box = ensurePreviewBox(input);
        const img = box.querySelector('img');
        const url = URL.createObjectURL(file);
        img.src = url;
        img.onload = () => URL.revokeObjectURL(url);
        box.style.display = 'inline-flex';
      }
      document.addEventListener('change', function (e) {
        if (e.target.matches('input[type="file"][accept*="image"]')) showPreview(e.target);
      });
      document.querySelectorAll('input[type="file"][accept*="image"]').forEach(showPreview);
    })();
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
