<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title || 'Edit Contact - Admin' %></title>

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/Images/logo.png" />
  <link rel="shortcut icon" type="image/png" href="/Images/logo.png" />

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>

  <!-- Unified Dark Dashboard Theme -->
  <style>
    :root { --green:#28a745; --card:#181818; --border:#2a2a2a; --muted:#b8b8b8; }
    body { background:#000; color:#fff; font-family: Arial, Helvetica, sans-serif; }
    .wrap { max-width:1100px; margin:32px auto; }
    .card { background:var(--card); border:1px solid var(--border); border-radius:12px; box-shadow:0 6px 18px rgba(0,0,0,.25); }
    .card-header { display:flex; align-items:center; justify-content:space-between; gap:16px; padding:12px 16px; border-bottom:1px solid var(--border); background:rgba(0,0,0,.35); }
    .muted { color:var(--muted); font-size:.92rem; }
    .section-heading strong { color:var(--green); }
    .sticky-actions { position: sticky; top: 0; padding: 12px 0; z-index: 5; background:#000; }
    .empty { border:1px dashed #444; background:#0c0c0c; border-radius:10px; padding:18px; color:#bbb; }
    .form-label { color:#ddd; }
    .form-control, .form-select { background:#0d0d0d; border:1px solid #3a3a3a; color:#fff; }
    .form-control:focus, .form-select:focus { border-color: var(--green); box-shadow: 0 0 0 0.25rem rgba(40,167,69,.25); }
    .btn-success { background-color: var(--green); border-color: var(--green); }
    .btn-outline-primary { color: var(--green); border-color: var(--green); }
    .btn-outline-primary:hover { background: var(--green); color:#000; }
    .btn-outline-secondary { color:#ccc; border-color:#555; }
    .btn-outline-secondary:hover { background:#333; color:#fff; }
  </style>
</head>
<body>
  <div class="wrap">
    <!-- Sticky top actions -->
    <div class="d-flex align-items-center justify-content-between mb-3 sticky-actions">
      <h1 class="h3 mb-0">Admin • Edit Contact</h1>
      <div class="d-flex gap-2">
        <a href="/admin/dashboard" class="btn btn-outline-secondary">← Back</a>
        <a href="/contact" target="_blank" class="btn btn-outline-primary">Preview</a>
      </div>
    </div>

    <% if (typeof msg !== 'undefined' && msg) { %>
      <div class="alert alert-info"><%= msg %></div>
    <% } %>

    <%
      const _page   = pageData || {};
      const _info   = _page.info || {};
      const _details = _page.details || {};
      const _footer = _page.footer || {};
      const _address = _details.address || '';
      const _phone   = _details.phone || '';
      const _email   = _details.email || '';
      const _hours   = _details.hours || '';
      const _map     = _details.mapEmbed || '';
    %>

    <!-- INTRO INFO -->
    <div class="card mb-4" id="section-info">
      <div class="card-header section-heading">
        <div>
          <strong>Intro Section</strong>
          <div class="muted">Text shown above the contact details & form.</div>
        </div>
      </div>
      <div class="card-body p-3 p-md-4">
        <form action="/admin/contact/info?_method=PUT" method="POST" class="row g-3">
          <div class="col-12">
            <label class="form-label">Title</label>
            <input class="form-control" type="text" name="title" value="<%= _info.title || '' %>" placeholder="Contact Hoffman's Reptiles" />
          </div>
          <div class="col-12">
            <label class="form-label">Text</label>
            <textarea class="form-control" name="text" rows="4" placeholder="Have a question? Get in touch with Hoffman's Reptiles today."><%= _info.text || '' %></textarea>
          </div>
          <div class="col-12">
            <button class="btn btn-success">Save Intro</button>
          </div>
        </form>
      </div>
    </div>

    <!-- CONTACT DETAILS -->
    <div class="card mb-4" id="section-details">
      <div class="card-header section-heading">
        <div>
          <strong>Contact Details</strong>
          <div class="muted">Store address, phone, email, hours, and optional Google Maps embed.</div>
        </div>
      </div>
      <div class="card-body p-3 p-md-4">
        <form action="/admin/contact/details?_method=PUT" method="POST" class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Address</label>
            <input class="form-control" type="text" name="address" value="<%= _address %>" placeholder="2359 Concord Blvd, Concord, CA 94520" />
          </div>
          <div class="col-md-3">
            <label class="form-label">Phone</label>
            <input class="form-control" type="text" name="phone" value="<%= _phone %>" placeholder="(925) 671-9106" />
          </div>
          <div class="col-md-3">
            <label class="form-label">Email</label>
            <input class="form-control" type="email" name="email" value="<%= _email %>" placeholder="info@hoffmansreptiles.com" />
          </div>
          <div class="col-12">
            <label class="form-label">Hours</label>
            <textarea class="form-control" name="hours" rows="4" placeholder="Mon–Fri: 12 PM – 6:30 PM&#10;Sat: 10 AM – 5 PM&#10;Sun: Closed"><%= _hours %></textarea>
          </div>
          <div class="col-12">
            <label class="form-label">Google Maps Embed URL (optional)</label>
            <input class="form-control" type="url" name="mapEmbed" value="<%= _map %>" placeholder="https://www.google.com/maps/embed?pb=..." />
          </div>
          <div class="col-12">
            <button class="btn btn-success">Save Details</button>
          </div>
        </form>

        <% if (_map) { %>
          <div class="mt-4">
            <div class="muted mb-2">Map Preview</div>
            <div class="ratio ratio-16x9">
              <iframe src="<%= _map %>" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
          </div>
        <% } %>
      </div>
    </div>

    <!-- FOOTER -->
    <div class="card mb-5" id="section-footer">
      <div class="card-header section-heading">
        <strong>Footer</strong>
      </div>
      <div class="card-body p-3 p-md-4">
        <form class="row g-3" action="/admin/contact/footer?_method=PUT" method="POST">
          <div class="col-12">
            <label class="form-label">Footer Title</label>
            <input class="form-control" type="text" name="title" value="<%= _footer.title || '' %>" placeholder="Hoffman's Reptiles" />
          </div>
          <div class="col-12">
            <label class="form-label">Footer Text</label>
            <textarea class="form-control" name="text" rows="4" placeholder="Address, short note, or disclaimer."><%= _footer.text || '' %></textarea>
          </div>
          <div class="col-12">
            <button class="btn btn-success">Save Footer</button>
          </div>
        </form>
      </div>
    </div>

    <div class="text-center mb-5">
      <a href="/contact" class="btn btn-outline-primary" target="_blank">Preview</a>
    </div>
  </div>

  <!-- Scroll position restore -->
  <script>
    (function () {
      if ('scrollRestoration' in history) history.scrollRestoration = 'manual';
      const KEY = 'adminContact.scrollY';

      document.addEventListener('submit', function (e) {
        if (e.target && e.target.tagName === 'FORM') {
          sessionStorage.setItem(KEY, String(window.scrollY));
        }
      }, true);

      document.addEventListener('click', function (e) {
        const btn = e.target.closest('button, input[type="submit"]');
        if (!btn) return;
        const form = btn.form || btn.closest('form');
        if (form) sessionStorage.setItem(KEY, String(window.scrollY));
      }, true);

      const saved = sessionStorage.getItem(KEY);
      if (saved !== null) {
        window.scrollTo(0, parseInt(saved, 10) || 0);
        sessionStorage.removeItem(KEY);
      }
    })();
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
