<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title || 'Edit Animals - Admin' %></title>

  <!-- Favicon (capital I folder + capital L file) -->
  <link rel="icon" type="image/png" href="/Images/Logo.png" />
  <link rel="shortcut icon" type="image/png" href="/Images/Logo.png" />

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>

  <!-- Unified Dark Dashboard Styles -->
  <style>
    :root { --green:#28a745; --card:#181818; --border:#2a2a2a; --muted:#b8b8b8; }
    html, body { height:100%; margin:0; }
    body { background:#000; color:#fff; font-family: Arial, Helvetica, sans-serif; }
    .wrap { max-width:1100px; margin:32px auto; padding:0 16px; }

    .card { background:var(--card); border:1px solid var(--border); border-radius:12px; box-shadow:0 6px 18px rgba(0,0,0,.25); color:#fff; }
    .card-header { background:rgba(0,0,0,.35); border-bottom:1px solid var(--border); display:flex; align-items:center; justify-content:space-between; gap:12px; }
    .section-heading strong { color:var(--green); }
    .muted { color:var(--muted); font-size:.92rem; }

    .sticky-actions { position: sticky; top: 0; padding: 12px 0; z-index: 5; background:#000; }

    .form-label { color:#ddd; }
    .form-control, .form-select { background:#0d0d0d; border:1px solid #3a3a3a; color:#fff; }
    .form-control:focus, .form-select:focus { border-color: var(--green); box-shadow: 0 0 0 0.25rem rgba(40,167,69,.25); }

    .btn-success { background-color: var(--green); border-color: var(--green); }
    .btn-outline-primary { color: var(--green); border-color: var(--green); }
    .btn-outline-primary:hover { background: var(--green); color:#000; }
    .btn-outline-secondary { color:#ccc; border-color:#555; }
    .btn-outline-secondary:hover { background:#333; color:#fff; }

    .empty { border:1px dashed #444; background:#0c0c0c; border-radius:10px; padding:18px; color:#bbb; }
    .badge-status { font-size:.85rem; }

    .thumb, .grid-thumb { object-fit:cover; border-radius:6px; border:1px solid #333; }
    .thumb { width:200px; height:150px; }
    .grid-thumb { width:100%; height:220px; }
    .hero-preview { width:100%; max-height:360px; object-fit:cover; border-radius:10px; border:1px solid #333; }

    .preview-image { max-height:120px; border-radius:6px; border:1px solid #333; margin-top:6px; }

    /* small link under title on card */
    .mini-link { font-size:.85rem; color:#9ad9a2; text-decoration:none; }
    .mini-link:hover { text-decoration:underline; color:#baf5c0; }
  </style>
</head>
<body>
  <%
    const _heroUrl     = (typeof heroUrl !== 'undefined' && heroUrl) ? heroUrl : '';
    const _welcomeText = (typeof welcomeText !== 'undefined' && welcomeText) ? welcomeText : '';
    const _animals     = (typeof animals !== 'undefined' && Array.isArray(animals)) ? animals : [];
    const _footer      = (typeof footer !== 'undefined' && footer) ? footer : {};
    const _msg         = (typeof msg !== 'undefined' && msg) ? msg : '';
  %>

  <div class="wrap">
    <!-- Sticky top actions -->
    <div class="d-flex align-items-center justify-content-between mb-3 sticky-actions">
      <h1 class="h3 mb-0">Admin • Edit Animals Page</h1>
      <div class="d-flex gap-2">
        <a href="/admin/dashboard" class="btn btn-outline-secondary">← Back</a>
        <a href="/animals" target="_blank" class="btn btn-outline-primary">Preview</a>
      </div>
    </div>

    <% if (_msg) { %>
      <div class="alert alert-info"><%= _msg %></div>
    <% } %>

    <!-- HERO -->
    <div class="card mb-4" id="section-hero">
      <div class="card-header section-heading">
        <strong>Hero Image</strong>
        <span class="muted">Replace the large header image on the Animals page.</span>
      </div>
      <div class="card-body">
        <% if (_heroUrl) { %>
          <div class="mb-3">
            <img class="hero-preview" src="<%= _heroUrl %>" alt="Current hero">
          </div>
        <% } %>

        <form action="/admin/animals/hero?_method=PUT" method="POST" enctype="multipart/form-data" class="row g-3">
          <div class="col-md-8 image-field">
            <label class="form-label">New Hero Image</label>
            <input class="form-control image-input" type="file" accept="image/*" name="imageFile" required>
            <img class="preview-image d-none" alt="Preview">
            <div class="d-flex gap-2 mt-2">
              <button type="button" class="btn btn-outline-secondary btn-cancel">Cancel</button>
            </div>
            <div class="muted mt-1">Recommended: wide landscape image.</div>
          </div>
          <div class="col-md-4 d-flex align-items-end">
            <button class="btn btn-outline-primary w-100">Replace Hero</button>
          </div>
        </form>
      </div>
    </div>

    <!-- WELCOME TEXT -->
    <div class="card mb-4" id="section-welcome">
      <div class="card-header section-heading">
        <strong>Welcome Text</strong>
        <span class="muted">Single text block underneath the hero image.</span>
      </div>
      <div class="card-body">
        <form action="/admin/animals/welcome?_method=PUT" method="POST">
          <label class="form-label">Text</label>
          <textarea class="form-control" name="text" rows="5" placeholder="Welcome to Hoffman's Reptiles…"><%= _welcomeText %></textarea>
          <div class="mt-3">
            <button class="btn btn-success">Save Welcome Text</button>
          </div>
        </form>
      </div>
    </div>

    <!-- GRID -->
    <div class="card mb-4" id="section-grid">
      <div class="card-header section-heading">
        <strong>Animal Grid</strong>
        <span class="muted">4 across layout • Name on top • Image • Price • Availability.</span>
      </div>
      <div class="card-body">
        <!-- Add Animal -->
        <form action="/admin/animals/items?_method=POST" method="POST" enctype="multipart/form-data" class="row g-3 mb-4">
          <div class="col-md-3">
            <label class="form-label">Name</label>
            <input class="form-control" type="text" name="name" placeholder="Species / Morph" required>
          </div>
          <div class="col-md-3">
            <label class="form-label">Price (USD)</label>
            <input class="form-control" type="text" name="price" placeholder="e.g. 299.00" required>
          </div>
          <div class="col-md-3">
            <label class="form-label">Availability</label>
            <select class="form-control" name="available">
              <option value="true">Available</option>
              <option value="false">Not Available</option>
            </select>
          </div>
          <div class="col-md-3 image-field">
            <label class="form-label">Image</label>
            <input class="form-control image-input" type="file" name="imageFile" accept="image/*" required>
            <img class="preview-image d-none" alt="Preview">
            <div class="d-grid mt-2">
              <button type="button" class="btn btn-outline-secondary btn-sm btn-cancel">Cancel</button>
            </div>
          </div>

          <!-- Description on Add form -->
          <div class="col-12">
            <label class="form-label">Description (for the animal detail page)</label>
            <textarea class="form-control" name="description" rows="4" placeholder="Short description to show on the animal’s page (not shown on the main grid)"></textarea>
          </div>

          <div class="col-12">
            <button class="btn btn-success">+ Add Animal</button>
          </div>
        </form>

        <!-- Current Animals -->
        <% if (!_animals.length) { %>
          <div class="empty">No animals yet — add your first item above.</div>
        <% } else { %>
          <div class="row g-4">
            <% _animals.forEach(function(a, idx){ 
                 const id = a && (a._id || a.id || idx);
            %>
              <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="border rounded p-2 h-100" style="background:#111;">
                  <div class="d-flex justify-content-between align-items-start">
                    <strong><%= (a && a.name) || 'Untitled' %></strong>
                    <% if (a && a.slug) { %>
                      <a class="mini-link" href="/animals/<%= a.slug %>" target="_blank" title="Open detail page">View detail</a>
                    <% } %>
                  </div>

                  <div class="my-2 text-center">
                    <% if (a && a.image) { %>
                      <img class="grid-thumb" src="<%= a.image %>" alt="<%= a.name || 'Animal' %>">
                    <% } %>
                  </div>

                  <p class="mb-1"><strong>$<%= (a && a.price) || '0.00' %></strong></p>
                  <span class="badge badge-status <%= a && a.available ? 'bg-success' : 'bg-danger' %>">
                    <%= a && a.available ? 'Available' : 'Not Available' %>
                  </span>

                  <!-- Edit basics -->
                  <form action="/admin/animals/items/<%= id %>?_method=PUT" method="POST" class="mt-3">
                    <div class="mb-2">
                      <label class="form-label">Name</label>
                      <input class="form-control" type="text" name="name" value="<%= (a && a.name) || '' %>">
                    </div>
                    <div class="mb-2">
                      <label class="form-label">Price (USD)</label>
                      <input class="form-control" type="text" name="price" value="<%= (a && a.price) || '' %>">
                    </div>
                    <div class="mb-2">
                      <label class="form-label">Availability</label>
                      <select class="form-control" name="available">
                        <option value="true"  <%= a && a.available ? 'selected' : '' %>>Available</option>
                        <option value="false" <%= a && !a.available ? 'selected' : '' %>>Not Available</option>
                      </select>
                    </div>

                    <!-- Modal trigger to edit description -->
                    <button type="button" class="btn btn-outline-secondary w-100 btn-sm mt-2"
                            data-bs-toggle="modal" data-bs-target="#descModal-<%= id %>">
                      Edit Description
                    </button>

                    <button class="btn btn-outline-primary w-100 btn-sm mt-2">Save</button>
                  </form>

                  <!-- Replace Image -->
                  <form action="/admin/animals/items/<%= id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="mt-2">
                    <input type="hidden" name="__edit" value="imageOnly">
                    <div class="image-field">
                      <label class="form-label">Replace Image</label>
                      <input class="form-control mb-2 image-input" type="file" accept="image/*" name="imageFile">
                      <img class="preview-image d-none" alt="Preview">
                      <div class="d-grid mt-2">
                        <button type="button" class="btn btn-outline-secondary btn-sm btn-cancel">Cancel</button>
                      </div>
                    </div>
                    <button class="btn btn-outline-primary w-100 btn-sm mt-2">Replace Image</button>
                  </form>

                  <!-- Delete -->
                  <form action="/admin/animals/items/<%= id %>?_method=DELETE" method="POST" class="mt-2" onsubmit="return confirm('Delete this animal?');">
                    <button class="btn btn-danger w-100 btn-sm">Delete</button>
                  </form>
                </div>
              </div>

              <!-- Description Modal for this animal -->
              <div class="modal fade" id="descModal-<%= id %>" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered">
                  <div class="modal-content bg-dark text-light">
                    <div class="modal-header">
                      <h5 class="modal-title">Edit Description – <%= a && a.name ? a.name : 'Animal' %></h5>
                      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <form action="/admin/animals/items/<%= id %>?_method=PUT" method="POST">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="description" rows="6" placeholder="This text will appear on the animal’s detail page."><%= (a && a.description) || '' %></textarea>
                        <button class="btn btn-success mt-3 w-100">Save Description</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>

    <!-- FOOTER -->
    <div class="card mb-5" id="section-footer">
      <div class="card-header"><strong>Footer</strong></div>
      <div class="card-body">
        <form class="row g-3" action="/admin/animals/footer?_method=PUT" method="POST">
          <div class="col-12">
            <label class="form-label">Footer Title</label>
            <input class="form-control" type="text" name="title" value="<%= _footer?.title || '' %>">
          </div>
          <div class="col-12">
            <label class="form-label">Footer Text</label>
            <textarea class="form-control" name="text" rows="5" placeholder="Address, hours, contact…"><%= _footer?.text || '' %></textarea>
          </div>
          <div class="col-12">
            <button class="btn btn-success">Save Footer</button>
          </div>
        </form>
      </div>
    </div>

    <div class="text-center mb-5">
      <a href="/animals" class="btn btn-outline-primary" target="_blank">Preview</a>
    </div>
  </div>

  <!-- Live image preview + Cancel behavior -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      function wireImageField(field) {
        const input   = field.querySelector(".image-input");
        const preview = field.querySelector(".preview-image");
        const cancel  = field.querySelector(".btn-cancel");
        if (!input) return;

        input.addEventListener("change", (e) => {
          const file = e.target.files && e.target.files[0];
          if (file && preview) {
            const reader = new FileReader();
            reader.onload = ev => {
              preview.src = ev.target.result;
              preview.classList.remove("d-none");
            };
            reader.readAsDataURL(file);
          } else if (preview) {
            preview.src = "";
            preview.classList.add("d-none");
          }
        });

        if (cancel) {
          cancel.addEventListener("click", () => {
            input.value = "";
            if (preview) {
              preview.src = "";
              preview.classList.add("d-none");
            }
          });
        }
      }

      document.querySelectorAll(".image-field").forEach(wireImageField);
    });
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
