<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title || 'Edit Animals - Admin' %></title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>

  <!-- Inline styles (keep black background, white cards) -->
  <style>
    body { background:#040404; color:#fff; font-family: Arial, Helvetica, sans-serif; }
    .wrap { max-width:1100px; margin:32px auto; }
    .card { border-radius:12px; box-shadow:0 6px 18px rgba(0,0,0,.2); background:#ffffff; color:#111; }
    .card-header { background:#f8f9fa; border-bottom:1px solid #e9ecef; }
    .section-heading { display:flex; align-items:center; justify-content:space-between; gap:16px; }
    .thumb { width:200px; height:150px; object-fit:cover; border-radius:8px; border:1px solid rgba(0,0,0,.08); }
    .grid-thumb { width:100%; height:220px; object-fit:cover; border-radius:6px; border:1px solid rgba(0,0,0,.08); }
    .muted { color:#6c757d; font-size:.92rem; }
    .sticky-actions { position: sticky; top: 0; padding: 12px 0; z-index: 5; background:#040404; }
    .empty { border:1px dashed #cfd4da; background:#fff; border-radius:10px; padding:18px; color:#111; }
    .badge-status { font-size:.85rem; }
    .form-help { font-size:.85rem; color:#6c757d; }
    .hero-preview { width:100%; max-height:360px; object-fit:cover; border-radius:10px; border:1px solid rgba(0,0,0,.08); }
  </style>
</head>
<body>
  <%
    // ---- Safe defaults so EJS never errors if locals are missing ----
    const _heroUrl     = (typeof heroUrl !== 'undefined' && heroUrl) ? heroUrl : '';
    const _welcomeText = (typeof welcomeText !== 'undefined' && welcomeText) ? welcomeText : '';
    const _animals     = (typeof animals !== 'undefined' && Array.isArray(animals)) ? animals : [];
    const _footer      = (typeof footer !== 'undefined' && footer) ? footer : {};
    const _msg         = (typeof msg !== 'undefined' && msg) ? msg : '';
  %>

  <div class="wrap">
    <div class="d-flex align-items-center justify-content-between mb-3 sticky-actions">
      <h1 class="h3 mb-0">Admin • Edit Animals Page</h1>
      <div class="d-flex gap-2">
        <a href="/admin/dashboard" class="btn btn-outline-light">← Back to Dashboard</a>
        <a href="/animals" target="_blank" class="btn btn-outline-primary">Preview Public Page</a>
      </div>
    </div>

    <% if (_msg) { %>
      <div class="alert alert-info"><%= _msg %></div>
    <% } %>

    <!-- ========== HERO (Section 1) ========== -->
    <div class="card mb-4" id="section-hero">
      <div class="card-header section-heading">
        <strong>Hero Image</strong>
        <span class="muted">Replace the large header image on the Animals page.</span>
      </div>
      <div class="card-body">
        <% if (_heroUrl) { %>
          <div class="mb-3">
            <img class="hero-preview" src="<%= _heroUrl %>" alt="Current hero">
          </div>
        <% } %>

        <form action="/admin/animals/hero?_method=PUT" method="POST" enctype="multipart/form-data" class="row g-3">
          <div class="col-md-8">
            <label class="form-label">New Hero Image</label>
            <input class="form-control" type="file" accept="image/*" name="imageFile" required>
            <div class="form-help">Recommended: wide landscape image.</div>
            <!-- Live preview box will be injected below this input -->
          </div>
          <div class="col-md-4 d-flex align-items-end">
            <button class="btn btn-primary w-100">Replace Hero</button>
          </div>
        </form>
      </div>
    </div>

    <!-- ========== WELCOME TEXT (Section 2) ========== -->
    <div class="card mb-4" id="section-welcome">
      <div class="card-header section-heading">
        <strong>Welcome Text</strong>
        <span class="muted">Single text block underneath the hero image.</span>
      </div>
      <div class="card-body">
        <form action="/admin/animals/welcome?_method=PUT" method="POST">
          <label class="form-label">Text</label>
          <textarea class="form-control" name="text" rows="5" placeholder="Welcome to Hoffman's Reptiles…"><%= _welcomeText %></textarea>
          <div class="mt-3">
            <button class="btn btn-success">Save Welcome Text</button>
          </div>
        </form>
      </div>
    </div>

    <!-- ========== GRID (Section 3) ========== -->
    <div class="card mb-4" id="section-grid">
      <div class="card-header section-heading">
        <strong>Animal Grid</strong>
        <span class="muted">4 across layout • Name on top • Image • Price • Availability.</span>
      </div>
      <div class="card-body">
        <!-- Add Animal -->
        <form action="/admin/animals/items?_method=POST" method="POST" enctype="multipart/form-data" class="row g-3 mb-4">
          <div class="col-md-3">
            <label class="form-label">Name</label>
            <input class="form-control" type="text" name="name" placeholder="Species / Morph" required>
          </div>
          <div class="col-md-3">
            <label class="form-label">Price (USD)</label>
            <input class="form-control" type="text" name="price" placeholder="e.g. 299.00" required>
          </div>
          <div class="col-md-3">
            <label class="form-label">Availability</label>
            <select class="form-control" name="available">
              <option value="true">Available</option>
              <option value="false">Not Available</option>
            </select>
          </div>
          <div class="col-md-3">
            <label class="form-label">Image</label>
            <input class="form-control" type="file" name="imageFile" accept="image/*" required>
          </div>
          <div class="col-12">
            <button class="btn btn-success">+ Add Animal</button>
          </div>
        </form>

        <!-- Current Animals -->
        <% if (!_animals.length) { %>
          <div class="empty">No animals yet — add your first item above.</div>
        <% } else { %>
          <div class="row g-4">
            <% _animals.forEach(function(a, idx){ 
                 const id = a && (a._id || a.id || idx);
            %>
              <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="border rounded p-2 h-100" style="background:#fff;">
                  <!-- Name -->
                  <div class="d-flex align-items-center justify-content-between">
                    <strong><%= (a && a.name) || 'Untitled' %></strong>
                  </div>

                  <!-- Image -->
                  <div class="my-2 text-center">
                    <% if (a && a.image) { %>
                      <img class="grid-thumb" src="<%= a.image %>" alt="<%= a.name || 'Animal' %>">
                    <% } %>
                  </div>

                  <!-- Price + Availability -->
                  <p class="mb-1"><strong>$<%= (a && a.price) || '0.00' %></strong></p>
                  <span class="badge badge-status <%= a && a.available ? 'bg-success' : 'bg-danger' %>">
                    <%= a && a.available ? 'Available' : 'Not Available' %>
                  </span>

                  <!-- Edit text fields -->
                  <form action="/admin/animals/items/<%= id %>?_method=PUT" method="POST" class="mt-3">
                    <div class="mb-2">
                      <label class="form-label">Name</label>
                      <input class="form-control" type="text" name="name" value="<%= (a && a.name) || '' %>">
                    </div>
                    <div class="mb-2">
                      <label class="form-label">Price (USD)</label>
                      <input class="form-control" type="text" name="price" value="<%= (a && a.price) || '' %>">
                    </div>
                    <div class="mb-2">
                      <label class="form-label">Availability</label>
                      <select class="form-control" name="available">
                        <option value="true"  <%= a && a.available ? 'selected' : '' %>>Available</option>
                        <option value="false" <%= a && !a.available ? 'selected' : '' %>>Not Available</option>
                      </select>
                    </div>
                    <button class="btn btn-outline-primary w-100 btn-sm">Save</button>
                  </form>

                  <!-- Replace Image -->
                  <form action="/admin/animals/items/<%= id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="mt-2">
                    <input type="hidden" name="__edit" value="imageOnly">
                    <label class="form-label">Replace Image</label>
                    <input class="form-control mb-2" type="file" accept="image/*" name="imageFile">
                    <button class="btn btn-primary w-100 btn-sm">Replace Image</button>
                  </form>

                  <!-- Delete -->
                  <form action="/admin/animals/items/<%= id %>?_method=DELETE" method="POST" class="mt-2" onsubmit="return confirm('Delete this animal?');">
                    <button class="btn btn-danger w-100 btn-sm">Delete</button>
                  </form>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>

    <!-- ========== FOOTER (Section 4) ========== -->
    <div class="card mb-5" id="section-footer">
      <div class="card-header section-heading">
        <strong>Footer</strong>
      </div>
      <div class="card-body">
        <form class="row g-3" action="/admin/animals/footer?_method=PUT" method="POST">
          <div class="col-12">
            <label class="form-label">Footer Title</label>
            <input class="form-control" type="text" name="title" value="<%= _footer?.title || '' %>">
          </div>
          <div class="col-12">
            <label class="form-label">Footer Text</label>
            <textarea class="form-control" name="text" rows="5" placeholder="Address, hours, contact…"><%= _footer?.text || '' %></textarea>
          </div>
          <div class="col-12">
            <button class="btn btn-success">Save Footer</button>
          </div>
        </form>
      </div>
    </div>

    <div class="text-center mb-5">
      <a href="/animals" class="btn btn-outline-primary" target="_blank">Preview Public Page</a>
    </div>
  </div>

  <!-- Live image preview for any image file input -->
  <script>
    (function () {
      function ensurePreviewBox(afterNode) {
        let box = afterNode.nextElementSibling;
        if (!box || !box.classList || !box.classList.contains('js-img-preview')) {
          box = document.createElement('div');
          box.className = 'js-img-preview';
          box.style.marginTop = '8px';
          box.style.display = 'inline-flex';
          box.style.alignItems = 'center';
          box.style.gap = '10px';
          box.style.padding = '8px';
          box.style.border = '1px dashed #cfd4da';
          box.style.borderRadius = '8px';
          box.style.background = '#fff';
          const img = document.createElement('img');
          img.alt = 'Selected preview';
          img.style.width = '200px';
          img.style.height = '150px';
          img.style.objectFit = 'cover';
          img.style.borderRadius = '8px';
          img.style.border = '1px solid rgba(0,0,0,.08)';
          const note = document.createElement('small');
          note.textContent = 'Preview (not uploaded yet)';
          note.style.color = '#6c757d';
          box.appendChild(img);
          box.appendChild(note);
          afterNode.parentNode.insertBefore(box, afterNode.nextSibling);
        }
        return box;
      }

      function showPreviewForInput(input) {
        const file = input.files && input.files[0];
        const isImageInput =
          input.type === 'file' &&
          (input.getAttribute('accept') || '').toLowerCase().includes('image');
        if (!isImageInput) return;

        const box = ensurePreviewBox(input);
        const img = box.querySelector('img');

        if (file) {
          const url = URL.createObjectURL(file);
          img.src = url;
          img.onload = () => URL.revokeObjectURL(url);
          box.style.display = 'inline-flex';
        } else {
          img.removeAttribute('src');
          box.style.display = 'none';
        }
      }

      document.addEventListener('change', function (e) {
        const input = e.target;
        if (input.matches('input[type="file"][accept*="image"]')) {
          showPreviewForInput(input);
        }
      });

      // Initialize previews for any inputs already on page
      document.querySelectorAll('input[type="file"][accept*="image"]').forEach(showPreviewForInput);
    })();
  </script>

  <!-- Keep scroll position after Save/Delete and jump to section anchors -->
  <script>
    (function () {
      if ('scrollRestoration' in history) history.scrollRestoration = 'manual';
      const KEY = 'adminAnimals.scrollY';

      document.addEventListener('submit', function (e) {
        if (e.target && e.target.tagName === 'FORM') {
          sessionStorage.setItem(KEY, String(window.scrollY));
        }
      }, true);

      document.addEventListener('click', function (e) {
        const btn = e.target.closest('button, input[type="submit"]');
        if (!btn) return;
        const form = btn.form || btn.closest('form');
        if (form) sessionStorage.setItem(KEY, String(window.scrollY));
      }, true);

      const saved = sessionStorage.getItem(KEY);
      if (saved !== null) {
        window.scrollTo(0, parseInt(saved, 10) || 0);
        sessionStorage.removeItem(KEY);
      }

      if (location.hash) {
        const el = document.getElementById(location.hash.slice(1));
        if (el) el.scrollIntoView({ behavior: 'instant', block: 'start' });
      }
    })();
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
