<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title || "Edit About Us - Admin" %></title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>

  <style>
    :root { --green:#28a745; --card:#181818; --border:#2a2a2a; }
    body { background:#000; color:#fff; font-family: Arial, Helvetica, sans-serif; }
    .wrap { max-width:1100px; margin:32px auto; }
    .card { background:var(--card); border:1px solid var(--border); border-radius:12px; }
    .card-header { background:rgba(0,0,0,.35); border-bottom:1px solid var(--border); }
    .muted { color:#b8b8b8; font-size:.9rem; }
    .hero-preview { width:100%; max-height:300px; object-fit:cover; border-radius:8px; }
    .form-label { color:#ddd; }
    .form-control, .form-select { background:#0d0d0d; border:1px solid #3a3a3a; color:#fff; }
    .form-control:focus { border-color: var(--green); box-shadow: 0 0 0 0.25rem rgba(40,167,69,.25); }
    .btn-success { background-color: var(--green); border-color: var(--green); }
    .btn-outline-primary { color: var(--green); border-color: var(--green); }
    .btn-outline-primary:hover { background: var(--green); color:#000; }
    .empty { border:1px dashed #444; padding:20px; text-align:center; border-radius:8px; }
  </style>
</head>
<body>
  <div class="wrap">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h1 class="h3">Admin • Edit About Us</h1>
      <div class="d-flex gap-2">
        <a href="/admin/dashboard" class="btn btn-outline-secondary">← Back</a>
        <form action="/admin/about/publish" method="POST">
          <button type="submit" class="btn btn-success">Publish Page</button>
        </form>
        <a href="/about" target="_blank" class="btn btn-outline-primary">Preview</a>
      </div>
    </div>

    <% if (typeof msg !== 'undefined' && msg) { %>
      <div class="alert alert-info"><%= msg %></div>
    <% } %>

    <%
      const _page = pageData || {};
      const _hero = _page.hero || {};
      const _content = _page.content || {};
      const _footer = _page.footer || {};
    %>

    <!-- HERO -->
    <div class="card mb-4">
      <div class="card-header"><strong>Hero Section</strong></div>
      <div class="card-body">
        <% if (_hero.image) { %>
          <img class="hero-preview mb-3" src="<%= _hero.image %>" alt="Hero Image">
        <% } else { %>
          <div class="empty mb-3">No hero image yet.</div>
        <% } %>

        <form action="/admin/about/hero?_method=PUT" method="POST" enctype="multipart/form-data" class="mb-3">
          <label class="form-label">Replace Hero Image</label>
          <input class="form-control mb-2" type="file" name="imageFile" accept="image/*">
          <button class="btn btn-primary">Replace Hero</button>
        </form>

        <form action="/admin/about/hero-text?_method=PUT" method="POST" class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Hero Title</label>
            <input class="form-control" type="text" name="title" value="<%= _hero.title || '' %>">
          </div>
          <div class="col-md-6">
            <label class="form-label">Hero Subtitle</label>
            <input class="form-control" type="text" name="subtitle" value="<%= _hero.subtitle || '' %>">
          </div>
          <div class="col-12"><button class="btn btn-success">Save Hero Text</button></div>
        </form>
      </div>
    </div>

    <!-- ABOUT CONTENT -->
    <div class="card mb-4">
      <div class="card-header"><strong>About Content</strong></div>
      <div class="card-body">
        <form action="/admin/about/content?_method=PUT" method="POST" class="row g-3">
          <div class="col-12">
            <label class="form-label">Section Title</label>
            <input class="form-control" type="text" name="title" value="<%= _content.title || '' %>">
          </div>
          <div class="col-12">
            <label class="form-label">Section Text</label>
            <textarea class="form-control" name="text" rows="6"><%= _content.text || '' %></textarea>
          </div>
          <div class="col-12"><button class="btn btn-success">Save Content</button></div>
        </form>
      </div>
    </div>

    <!-- FOOTER -->
    <div class="card mb-5">
      <div class="card-header"><strong>Footer</strong></div>
      <div class="card-body">
        <form action="/admin/about/footer?_method=PUT" method="POST" class="row g-3">
          <div class="col-12">
            <label class="form-label">Footer Title</label>
            <input class="form-control" type="text" name="title" value="<%= _footer.title || '' %>">
          </div>
          <div class="col-12">
            <label class="form-label">Footer Text</label>
            <textarea class="form-control" name="text" rows="3"><%= _footer.text || '' %></textarea>
          </div>
          <div class="col-12"><button class="btn btn-success">Save Footer</button></div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
