<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title || "Gallery - Hoffman's Reptile Shop" %></title>

  <link rel="icon" type="image/png" href="/Images/Logo.png" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    body { background:#000; color:#28a745; }

    /* Navbar */
    .navbar { background:#fff !important; }
    .navbar .nav-link, .navbar .navbar-brand span { color:#28a745 !important; font-weight:bold; }
    .navbar .nav-link:hover { text-decoration:underline; }

    /* Hero */
    .hero {
      position: relative;
      width: 100%;
      height: 60vh;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      overflow: hidden;
      background:#111;
    }
    .hero img {
      position:absolute; inset:0;
      width:100%; height:100%; object-fit:cover;
      z-index:-1;
    }
    .hero h1, .hero p { color:#28a745; text-shadow:2px 2px 10px rgba(0,0,0,.8); }

    /* Info */
    .info-section { padding:40px 20px; color:#28a745; }

    /* Grid */
    .image-grid {
      display:grid; grid-template-columns:repeat(4, 1fr);
      gap:20px; padding:20px; justify-items:center;
    }
    .image-grid img {
      width:100%; max-width:350px; height:250px; object-fit:cover;
      border-radius:8px; box-shadow:0 4px 8px rgba(0,0,0,.6);
      transition:transform .3s ease;
    }
    .image-grid img:hover { transform:scale(1.05); }

    /* Footer */
    .footer { background:#28a745; color:#000; padding:20px 0; text-align:center; }
    .footer h4, .footer p { margin:5px 0; font-weight:bold; }
  </style>
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar') %>

  <!-- Hero -->
  <section class="hero">
    <% const heroImg = pageData?.hero?.image || pageData?.heroUrl; %>
    <% if (heroImg) { %>
      <img src="<%= heroImg %>" alt="Gallery hero">
    <% } %>
    <div>
      <h1><%= pageData?.hero?.title || pageData?.heroTitle || "Our Gallery" %></h1>
      <p><%= pageData?.hero?.subtitle || pageData?.heroSubtitle || "Explore the beauty of our reptiles and animals" %></p>
    </div>
  </section>

  <!-- Info -->
  <section class="info-section text-center">
    <h2><%= pageData?.info?.title || pageData?.introTitle || "Gallery" %></h2>
    <p><%= pageData?.info?.text || pageData?.introText || "A look at some of our reptiles and animals. Visit our shop for the full collection." %></p>
  </section>

  <!-- Image Grid -->
  <section class="image-grid-section">
    <div class="image-grid">
      <% if (Array.isArray(pageData?.images) && pageData.images.length) { %>
        <% pageData.images.forEach((src, i) => { %>
          <img src="<%= src %>" alt="Gallery image <%= i+1 %>">
        <% }) %>
      <% } else if (Array.isArray(pageData?.grid) && pageData.grid.length) { %>
        <% pageData.grid.forEach((src, i) => { %>
          <img src="<%= src %>" alt="Gallery image <%= i+1 %>">
        <% }) %>
      <% } else { %>
        <p class="text-center text-muted">No gallery images available right now.</p>
      <% } %>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer">
    <h4><%= pageData?.footer?.title || "Hoffman's Reptiles" %></h4>
    <p><%= pageData?.footer?.text || "2359 Concord Blvd, Concord, CA 94520" %></p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
