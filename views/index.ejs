<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title><%= title || "Hoffman's Reptile Shop" %></title>

  <link rel="icon" type="image/png" href="/Images/Logo.png" />
  <meta name="description" content="<%= metaDescription || '' %>">
  <meta name="keywords" content="<%= metaKeywords || '' %>">
  <meta name="author" content="Hoffman's Reptile Shop" />
  <meta name="robots" content="index, follow" />

  <!-- Open Graph -->
  <meta property="og:title" content="<%= title || '' %>" />
  <meta property="og:description" content="<%= metaDescription || '' %>" />
  <meta property="og:image" content="/Images/Logo.png" />
  <meta property="og:url" content="https://hoffman-s-reptiles.onrender.com" />
  <meta property="og:type" content="website" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="<%= title || '' %>" />
  <meta name="twitter:description" content="<%= metaDescription || '' %>" />
  <meta name="twitter:image" content="/Images/Logo.png" />

  <link rel="stylesheet" href="/CSS/home_page.styles.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
  <!-- Fixed Navbar -->
  <%- include('partials/navbar') %>

  <!-- ===================== Carousel ===================== -->
  <% const slides = (pageData && Array.isArray(pageData.carousel)) ? pageData.carousel : []; %>
  <% if (slides.length) { %>
    <div id="carouselExampleIndicators" class="carousel slide mt-4" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% slides.forEach((item, idx) => { %>
          <div class="carousel-item <%= idx === 0 ? 'active' : '' %>">
            <img class="d-block w-100" src="<%= item.image %>" alt="<%= item.title || 'Slide' %>">
            <% if (item.title || item.description) { %>
              <div class="carousel-caption-box <%= item.position || 'right' %>">
                <% if (item.title) { %><h2><%= item.title %></h2><% } %>
                <% if (item.description) { %><p><%= item.description %></p><% } %>
              </div>
            <% } %>
          </div>
        <% }) %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  <% } %>

  <!-- ===================== Info Section ===================== -->
  <% if (pageData?.info?.headline || pageData?.info?.text) { %>
    <section class="info-section text-center">
      <% if (pageData.info.headline) { %><h2><%= pageData.info.headline %></h2><% } %>
      <% if (pageData.info.text) { %><p><%= pageData.info.text %></p><% } %>
    </section>
  <% } %>

  <!-- ===================== Split Section ===================== -->
  <% if (pageData?.split?.image || pageData?.split?.title || pageData?.split?.text) { %>
    <section class="split-section">
      <% if (pageData.split.image) { %>
        <div class="split-image">
          <img src="<%= pageData.split.image %>" alt="<%= pageData.split.title || 'Split Image' %>">
        </div>
      <% } %>
      <% if (pageData.split.title || pageData.split.text) { %>
        <div class="split-text">
          <% if (pageData.split.title) { %><h2><%= pageData.split.title %></h2><% } %>
          <% if (pageData.split.text) { %><p><%= pageData.split.text %></p><% } %>
        </div>
      <% } %>
    </section>
  <% } %>

  <!-- ===================== Mid Section ===================== -->
  <% if (pageData?.mid?.text) { %>
    <section class="mid-section text-center">
      <p><%= pageData.mid.text %></p>
    </section>
  <% } %>

  <!-- ===================== Image Grid ===================== -->
  <% const gridImages = (pageData?.grid?.images) || []; %>
  <% const gridTitle = (pageData?.grid?.title || '').trim(); %>
  <% const gridSubtitle = (pageData?.grid?.subtitle || '').trim(); %>

  <% if (gridImages.length || gridTitle || gridSubtitle) { %>
    <section class="image-grid-section">
      <% if (gridTitle) { %><h2><%= gridTitle %></h2><% } %>
      <% if (gridSubtitle) { %><p><%= gridSubtitle %></p><% } %>
      <% if (gridImages.length) { %>
        <div class="image-grid">
          <% gridImages.forEach(src => { %>
            <img src="<%= src %>" alt="Animal" />
          <% }) %>
        </div>
      <% } %>
    </section>
  <% } %>

  <!-- ===================== Footer (Dynamic) ===================== -->
  <%- include('partials/footer', { pageData }) %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
