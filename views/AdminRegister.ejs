<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title || "Create Admin Account" %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <!-- Font Awesome for eye icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet"/>
  <style>
    body {
      background:#111;
      color:#fff;
      min-height:100vh;
      display:flex;
      align-items:center;
      justify-content:center;
      margin:0;
    }
    .card {
      background:#222;
      max-width:480px;
      width:100%;
      border:1px solid #444;
      border-radius:12px;
      padding:2rem;
      box-shadow:0 0 15px rgba(0,0,0,0.6);
    }
    .page-title {
      color:#fff;
      font-size:1.6rem;
      font-weight:600;
      text-shadow:0 0 6px rgba(255,255,255,.4);
    }
    label.form-label {
      color:#fff;
      font-weight:500;
    }
    .form-control {
      background:#2b2b2b;
      border:1px solid #555;
      color:#f1f1f1;
    }
    .form-control:focus {
      background:#2b2b2b;
      color:#fff;
      border-color:#0d6efd;
      box-shadow:0 0 5px #0d6efd;
    }
    .form-text {
      color:#bbb;
      font-size:0.9rem;
    }
    .btn-primary {
      background:#0d6efd;
      border:none;
    }
    .btn-primary:hover {
      background:#0b5ed7;
    }
    .password-wrapper {
      position: relative;
    }
    .password-wrapper input {
      padding-right: 40px;
    }
    .toggle-password {
      position: absolute;
      top: 50%;
      right: 10px;
      transform: translateY(-50%);
      cursor: pointer;
      color: #bbb;
    }
    .toggle-password:hover {
      color: #fff;
    }
    .show-label {
      font-size: 0.85rem;
      margin-bottom: 4px;
      display: block;
      color: #bbb;
    }
  </style>
</head>
<body>
  <div class="card shadow">
    <h2 class="page-title text-center mb-3">Create Admin Account</h2>

    <% if (msg) { %>
      <div class="alert alert-warning py-2 text-center"><%= msg %></div>
    <% } %>

    <form method="POST" action="/admin/register">
      <!-- First Name -->
      <div class="mb-3">
        <label class="form-label" for="firstName">First Name</label>
        <input id="firstName" class="form-control" type="text" name="firstName" placeholder="Enter first name" required />
      </div>

      <!-- Last Name -->
      <div class="mb-3">
        <label class="form-label" for="lastName">Last Name</label>
        <input id="lastName" class="form-control" type="text" name="lastName" placeholder="Enter last name" required />
      </div>

      <!-- Phone -->
      <div class="mb-3">
        <label class="form-label" for="phone">Phone Number</label>
        <input id="phone" class="form-control" type="tel" name="phone"
               pattern="^[0-9\\-\\+\\s\\(\\)]{7,20}$"
               title="Enter a valid phone number"
               placeholder="Enter phone number"
               required />
      </div>

      <!-- Email -->
      <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input id="email" class="form-control" type="email" name="email" placeholder="Enter email" required />
      </div>

      <!-- Password -->
      <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <span class="show-label">Show Password</span>
        <div class="password-wrapper">
          <input id="password" class="form-control" type="password" name="password"
            placeholder="Enter password"
            required 
            minlength="8"
            pattern="^(?=.*[0-9])(?=.*[!@#$%^&*])[A-Za-z0-9!@#$%^&*]{8,}$"
            title="Password must be at least 8 characters long and include at least 1 number and 1 symbol."
          />
          <i class="fas fa-eye toggle-password" data-target="password"></i>
        </div>
        <div class="form-text">Must be at least 8 characters, include 1 number and 1 symbol.</div>
      </div>

      <!-- Confirm Password -->
      <div class="mb-3">
        <label class="form-label" for="confirm">Confirm Password</label>
        <span class="show-label">Show Password</span>
        <div class="password-wrapper">
          <input id="confirm" class="form-control" type="password" name="confirm" placeholder="Confirm password" required />
          <i class="fas fa-eye toggle-password" data-target="confirm"></i>
        </div>
      </div>

      <!-- Submit -->
      <button class="btn btn-primary w-100" type="submit">Register</button>
    </form>

    <a href="/admin/login" class="btn btn-primary w-100 mt-3">Back to Login</a>
  </div>

  <script>
    // Toggle password visibility for both password + confirm
    document.querySelectorAll('.toggle-password').forEach(icon => {
      icon.addEventListener('click', () => {
        const targetId = icon.getAttribute('data-target');
        const input = document.getElementById(targetId);
        const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
        input.setAttribute('type', type);

        icon.classList.toggle('fa-eye');
        icon.classList.toggle('fa-eye-slash');
      });
    });
  </script>
</body>
</html>
