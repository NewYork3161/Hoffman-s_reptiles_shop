<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/Images/Logo.png" />
  <link rel="shortcut icon" type="image/png" href="/Images/Logo.png" />

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    body {
      margin: 0;
      font-family: Arial, Helvetica, sans-serif;
      background-color: #fff;
    }
    .navbar {
      background-color: #343a40 !important;
    }
    .navbar-brand {
      color: #fff !important;
      font-weight: bold;
      display: flex;
      align-items: center;
      gap: 8px;
    }
    .navbar-brand img {
      height: 32px;
      width: auto;
    }
    .dropdown-menu {
      min-width: 180px;
    }
    .content {
      padding: 20px;
    }
    iframe {
      width: 100%;
      height: 80vh;
      border: none;
      margin-top: 10px;
    }
    .edit-btn {
      position: fixed;
      top: 70px; /* just below the navbar */
      right: 20px;
      z-index: 1000;
      display: none; /* hidden by default */
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <img src="/Images/Logo.png" alt="Logo" />
        Admin
      </a>

      <!-- Dropdown Menu -->
      <div class="dropdown ms-auto">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          Menu
        </button>
        <ul class="dropdown-menu dropdown-menu-end">
          <li><a class="dropdown-item load-page" data-url="/home" data-edit="/admin/edit/home" href="#">Homepage</a></li>
          <li><a class="dropdown-item load-page" data-url="/animals" data-edit="/admin/edit/animals" href="#">Animals</a></li>
          <li><a class="dropdown-item load-page" data-url="/gallery" data-edit="/admin/edit/gallery" href="#">Gallery</a></li>
          <li><a class="dropdown-item load-page" data-url="/about" data-edit="/admin/edit/about" href="#">About</a></li>
          <li><a class="dropdown-item load-page" data-url="/contact" data-edit="/admin/edit/contact" href="#">Contact Us</a></li>
          <li><a class="dropdown-item load-page" data-url="/admin/analytics" data-edit="" href="#">Analytics</a></li>
          <li><hr class="dropdown-divider"></li>
          <li>
            <form action="/admin/logout" method="POST" style="margin:0;">
              <button type="submit" class="dropdown-item text-danger">Logout</button>
            </form>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Green Edit Button -->
  <div class="edit-btn">
    <button class="btn btn-success btn-lg" id="editPageBtn">Edit Page</button>
  </div>

  <!-- Content -->
  <div class="content">
    <h1>Admin Dashboard</h1>
    <p>Select a page from the dropdown to load a copy here:</p>

    <!-- iframe container -->
    <iframe id="previewFrame" src=""></iframe>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const previewFrame = document.getElementById('previewFrame');
    const editBtnWrapper = document.querySelector('.edit-btn');
    const editBtn = document.getElementById('editPageBtn');

    let currentEditUrl = null;

    // Load page into iframe when selected
    document.querySelectorAll('.load-page').forEach(item => {
      item.addEventListener('click', function (e) {
        e.preventDefault();
        const url = this.getAttribute('data-url');
        currentEditUrl = this.getAttribute('data-edit');
        previewFrame.src = url;

        // Show the edit button once a page is loaded, unless no edit page
        if (currentEditUrl) {
          editBtnWrapper.style.display = 'block';
        } else {
          editBtnWrapper.style.display = 'none';
        }
      });
    });

    // Redirect to edit page
    editBtn.addEventListener('click', () => {
      if (currentEditUrl) {
        window.location.href = currentEditUrl;
      }
    });
  </script>
</body>
</html>
