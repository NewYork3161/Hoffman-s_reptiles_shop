<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title || "Review Emails - Admin" %></title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>

  <!-- Unified Dark Dashboard Theme -->
  <style>
    :root { --green:#28a745; --card:#181818; --border:#2a2a2a; --muted:#b8b8b8; }

    body {
      background:#000;
      color:#fff;
      font-family: Arial, Helvetica, sans-serif;
      margin:0;
      padding:0;
    }

    .wrap { max-width:1100px; margin:32px auto; padding:0 16px; }

    .card {
      background:var(--card);
      border:1px solid var(--border);
      border-radius:12px;
      box-shadow:0 6px 18px rgba(0,0,0,.25);
      padding:20px;
      margin-bottom:24px;
    }

    .email-name {
      color:var(--green);
      font-size:1.2rem;
      font-weight:bold;
      margin-bottom:6px;
    }

    .email-address {
      color:var(--muted);
      margin-bottom:12px;
      font-size:.95rem;
    }

    .email-message {
      background:#0d0d0d;
      border:1px solid #333;
      border-radius:8px;
      padding:12px 14px;
      white-space:pre-wrap;
      margin-bottom:16px;
      color:#fff;
    }

    .btn-reply {
      background: var(--green);
      border-color: var(--green);
      color:#000;
      font-weight:600;
    }
    .btn-reply:hover {
      background:#218838;
      border-color:#218838;
      color:#fff;
    }

    .btn-delete {
      background:#dc3545;
      border-color:#dc3545;
      color:#fff;
      font-weight:600;
    }
    .btn-delete:hover {
      background:#b02a37;
      border-color:#a52834;
    }

    .empty {
      border:1px dashed #444;
      background:#0c0c0c;
      border-radius:10px;
      padding:18px;
      color:#bbb;
      text-align:center;
    }

    .header-actions {
      display:flex;
      align-items:center;
      justify-content:space-between;
      margin-bottom:24px;
    }
  </style>
</head>
<body>
  <div class="wrap">
    <div class="header-actions">
      <h1 class="h3 mb-0">Admin ‚Ä¢ Review Emails</h1>
      <div class="d-flex gap-2">
        <a href="/admin/dashboard" class="btn btn-outline-secondary" target="_top">‚Üê Back to Dashboard</a>
        <!-- Delete All Emails -->
        <form action="/admin/review_emails/delete_all" method="POST" 
              onsubmit="return confirm('Delete ALL emails? This cannot be undone.');">
          <button type="submit" class="btn btn-delete">üóë Delete All</button>
        </form>
      </div>
    </div>

    <% if (typeof emails !== "undefined" && emails.length > 0) { %>
      <% emails.forEach(function(email) { %>
        <div class="card">
          <!-- Use schema field names -->
          <div class="email-name"><%= email.Full_Name %></div>
          <div class="email-address"><%= email.Email %></div>
          <div class="email-message"><%= email.Message %></div>

          <div class="d-flex gap-2">
            <!-- Reply button (generic Gmail compose, no forced account) -->
            <a class="btn btn-reply"
               href="https://mail.google.com/mail/?view=cm&fs=1&to=<%= email.Email %>&su=Reply from Hoffman's Reptiles"
               target="_blank">
              Reply
            </a>

            <!-- Delete single email -->
            <form action="/admin/review_emails/<%= email._id %>/delete" method="POST" 
                  onsubmit="return confirm('Delete this email?');">
              <button type="submit" class="btn btn-delete">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="empty">No emails have been submitted yet.</div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
